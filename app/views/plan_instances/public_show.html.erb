<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <% if @plan.cover_photo.present? %>
          <img src="<%= @plan.cover_photo %>/800/400" class="card-img-top" alt="<%= @plan.name %>">
        <% end %>
        <div class="card-body">
          <h1 class="card-title"><%= @plan.name %></h1>
          <p class="card-text"><%= @plan.description %></p>

          <div class="mt-4">
            <h4>Join this Reading Plan</h4>
            <p>This is a public Bible reading plan that you can join. Create an account or login to participate.</p>

            <div class="d-flex gap-2 mt-3">
              <%= link_to "Log In", new_user_session_path, class: "btn btn-primary" %>
              <%= link_to "Create Account", new_user_registration_path, class: "btn btn-outline-primary" %>
            </div>
          </div>

          <div class="mt-4">
            <h5>Plan Details</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between">
                <span>Duration:</span>
                <span><%= @plan.days.length %> days</span>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                <span>Start Date:</span>
                <span><%= @plan_instance.start_date.strftime("%B %d, %Y") %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                <span>Started By:</span>
                <span><%= @plan_instance.plan_instance_users.where(creator: true).first.user.username %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
